{
  "compilerOptions": {
    "composite": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@internalTypes/*": ["types/*"],
      "@components/*": ["components/*"],
      "@features/*": ["features/*"],
      "@utils/*": ["utils/*"]
    },
    "module": "esnext",
    "types": [],
    "sourceMap": true,
    "target": "esnext",
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
